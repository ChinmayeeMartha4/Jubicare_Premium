<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".activity.HealthRecord">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="3dp">


            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="15dp"-->
            <!--            android:layout_marginBottom="3dp"-->
            <!--            android:text="@string/Fill_your_health_record"-->
            <!--            android:textColor="@color/colorTheme"-->
            <!--            android:textSize="20sp"-->
            <!--            android:textStyle="bold"-->
            <!--            />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:drawableRight="@drawable/ic_star"
                android:text="@string/patientName"
                android:textStyle="bold"
                android:textColor="@color/menuTextColor"
                android:textSize="16sp"
                android:fontFamily="@font/robotoregular" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_of_edittext"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textCapSentences"
                    android:hint="@string/patientName"
                    android:fontFamily="@font/robotoregular"
                    android:padding="12dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:drawableRight="@drawable/ic_star"

                android:text="@string/Gender"
                android:textColor="@color/menuTextColor"
                android:textStyle="bold"

                android:textSize="16sp"
                android:fontFamily="@font/robotoregular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/Male" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/Female" />

                    <RadioButton
                        android:id="@+id/rb_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/Other" />

                </RadioGroup>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_caste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_3dp"
                android:fontFamily="@font/robotoregular"
                android:text="@string/caste"
                android:drawableRight="@drawable/ic_star"

                android:textColor="@color/menuTextColor"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/ll_spn_caste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_of_edittext"
                android:orientation="vertical"
                android:padding="@dimen/margin12"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/spn_caste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_what_you_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:text="What did you know?"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_star"

                android:textColor="@color/menuTextColor"
                android:textSize="16sp"
                android:fontFamily="@font/robotoregular"
                />

            <LinearLayout
                android:id="@+id/ll_what_you_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rg_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/age_age"

                        />

                    <RadioButton
                        android:id="@+id/rb_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="@string/DateofBirth" />

                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/age"
                    android:textColor="@color/menuTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:maxLength="3"
                        android:hint="@string/age1"
                        android:fontFamily="@font/robotoregular"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/DateofBirth"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_star"
                    android:textColor="@color/menuTextColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/robotoregular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_date_of_birth"
                        android:drawableLeft="@drawable/calendar"
                        style="@style/StyleTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/robotoregular"
                        android:inputType="date"
                        android:padding="@dimen/margin10" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:text="@string/aadhar"
                android:textColor="@color/menuTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/robotoregular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_of_edittext"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_aadhar_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="@string/aadhar"
                    android:fontFamily="@font/robotoregular"
                    android:maxLength="12"
                    android:padding="12dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/height"
                    android:textColor="@color/menuTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:fontFamily="@font/robotoregular"
                        android:hint="@string/height1"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/weight"
                    android:textColor="@color/menuTextColor"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_star"
                    android:textSize="16sp"
                    android:fontFamily="@font/robotoregular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:fontFamily="@font/robotoregular"
                        android:hint="@string/weight1"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_contact_no_for_counsellor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_3dp"
                android:drawableRight="@drawable/ic_star"
                android:fontFamily="@font/robotoregular"
                android:text="@string/PatientContact"
                android:textColor="@color/menuTextColor"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_contact_number_for_counsellor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_contact_number"
                        style="@style/StyleTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotoregular"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/margin12" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_image_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8dp"
                    android:src="@drawable/call" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/Pincode"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:hint="@string/Pincode"
                        android:fontFamily="@font/robotoregular"
                        android:maxLength="6"
                        android:padding="12dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/state"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />



                <LinearLayout
                    android:id="@+id/ll_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical"
                    android:padding="@dimen/margin12"
                    >

                    <Spinner
                        android:id="@+id/spn_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/District"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"

                    />



                <LinearLayout
                    android:id="@+id/ll_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical"
                    android:padding="@dimen/margin12"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spn_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/SelectBlock"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />




                <LinearLayout
                    android:id="@+id/ll_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical"
                    android:padding="@dimen/margin12">
                    <Spinner
                        android:id="@+id/spn_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular" />

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/SelectVillage"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/ll_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical"
                    android:padding="@dimen/margin12"
                    >
                    <Spinner
                        android:id="@+id/spn_village"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular" />

                </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableRight="@drawable/ic_star"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/Address"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:hint="@string/Address"
                        android:fontFamily="@font/robotoregular"
                        android:padding="12dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_emergency_conytact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/PatientEmergencyContact"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_emergenct_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_of_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_emergenct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:hint="@string/PatientEmergencyContact"
                        android:fontFamily="@font/robotoregular"
                        android:maxLength="10"
                        android:padding="12dp"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="@string/all_fields_are_mandatory_with_star_in_this_screen"
                    android:textColor="@color/menuTextColor"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/button_submit1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="Submit"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/submitbutton">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>